<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".user.usersell.UserSellPetActivity"
        android:padding="@dimen/layout_padding_size"
        android:background="@color/colorBackground"
        android:orientation="vertical">

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/warningSellPet"
                android:gravity="center"
                android:textSize="15dp"
                android:textStyle="bold"
                android:id="@+id/txtUserSellInform"
                android:layout_marginTop="@dimen/margin_layout_size"/>
    <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/margin_layout_size"
            android:id="@+id/rvUserSell"></android.support.v7.widget.RecyclerView>

</LinearLayout>