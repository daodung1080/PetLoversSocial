<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".user.userbuy.UserBuyInformationActivity"
        android:orientation="vertical">

    <android.support.design.widget.AppBarLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                app:contentInsetStartWithNavigation="0dp"
                android:layout_height="?attr/actionBarSize"
                android:background="@color/colorPrimary"
                app:popupTheme="@style/AppTheme.PopupOverlay">

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/title_user_market_detail"
                    android:textColor="@color/colorBackground"
                    android:textSize="16dp"
                    android:layout_weight="8"
                    android:textStyle="bold"/>

        </android.support.v7.widget.Toolbar>

    </android.support.design.widget.AppBarLayout>

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorBackground">

    <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="1dp"
            app:cardCornerRadius="0dp">

        <ImageView
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:layout_marginTop="@dimen/margin_layout_size"
                android:src="@drawable/img_animal"
                android:id="@+id/imgMarketImage"/>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            app:cardElevation="3dp"
            app:cardCornerRadius="10dp"
            android:layout_centerHorizontal="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="185dp"
            android:layout_centerVertical="true"
            android:visibility="visible">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="10"
                    android:layout_margin="10dp">

                <ImageView
                        android:layout_width="0dp"
                        android:layout_height="25dp"
                        android:src="@drawable/img_category"
                        android:layout_weight="2"/>

                <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2.3"
                        android:layout_gravity="center"
                        android:text="@string/txtAnimalCategory"
                        android:textSize="@dimen/edt_txt_size"
                        android:textStyle="bold"/>

                <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Dog"
                        android:layout_weight="5.7"
                        android:textSize="@dimen/edt_txt_size"
                        android:id="@+id/txtMarketCategory"
                        android:layout_gravity="center"/>

            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="10"
                    android:layout_margin="10dp">

                <ImageView
                        android:layout_width="0dp"
                        android:layout_height="25dp"
                        android:src="@drawable/img_pet_name"
                        android:layout_weight="2"/>

                <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2.3"
                        android:layout_gravity="center"
                        android:text="@string/txtAnimalName"
                        android:textSize="@dimen/edt_txt_size"
                        android:textStyle="bold"/>

                <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="White Coggi"
                        android:layout_weight="5.7"
                        android:textSize="@dimen/edt_txt_size"
                        android:id="@+id/txtMarketName"
                        android:layout_gravity="center"/>

            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="10"
                    android:layout_margin="10dp">

                <ImageView
                        android:layout_width="0dp"
                        android:layout_height="25dp"
                        android:src="@drawable/img_gender"
                        android:layout_weight="2"/>

                <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2.3"
                        android:layout_gravity="center"
                        android:text="@string/txtAnimalGender"
                        android:textSize="@dimen/edt_txt_size"
                        android:textStyle="bold"/>

                <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Male"
                        android:textSize="@dimen/edt_txt_size"
                        android:layout_weight="5.7"
                        android:id="@+id/txtMarketGender"
                        android:layout_gravity="center"/>

            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="10"
                    android:layout_margin="10dp">

                <ImageView
                        android:layout_width="0dp"
                        android:layout_height="25dp"
                        android:src="@drawable/img_weight"
                        android:layout_weight="2"/>

                <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2.3"
                        android:layout_gravity="center"
                        android:text="@string/txtAnimalWeight"
                        android:textSize="@dimen/edt_txt_size"
                        android:textStyle="bold"/>

                <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Male"
                        android:textSize="@dimen/edt_txt_size"
                        android:layout_weight="5.7"
                        android:id="@+id/txtMarketWeight"
                        android:layout_gravity="center"/>

            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="10"
                    android:layout_margin="10dp">

                <ImageView
                        android:layout_width="0dp"
                        android:layout_height="25dp"
                        android:src="@drawable/img_seller"
                        android:layout_weight="2"/>

                <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2.3"
                        android:layout_gravity="center"
                        android:text="@string/txtUserMarketPetSeller"
                        android:textSize="@dimen/edt_txt_size"
                        android:textStyle="bold"/>

                <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="dung123"
                        android:textSize="@dimen/edt_txt_size"
                        android:layout_weight="5.7"
                        android:id="@+id/txtMarketSeller"
                        android:layout_gravity="center"/>

            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="10"
                    android:layout_margin="10dp">

                <ImageView
                        android:layout_width="0dp"
                        android:layout_height="25dp"
                        android:src="@drawable/img_amount"
                        android:layout_weight="2"/>

                <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2.3"
                        android:layout_gravity="center"
                        android:text="@string/txtUserMarketPetAmount"
                        android:textSize="@dimen/edt_txt_size"
                        android:textStyle="bold"/>

                <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="11 left"
                        android:textSize="@dimen/edt_txt_size"
                        android:layout_weight="5.7"
                        android:id="@+id/txtMarketAmount"
                        android:layout_gravity="center"/>

            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="10"
                    android:layout_margin="10dp">

                <ImageView
                        android:layout_width="0dp"
                        android:layout_height="25dp"
                        android:src="@drawable/img_price"
                        android:layout_weight="2"/>

                <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2.3"
                        android:layout_gravity="center"
                        android:text="@string/txtUserMarketPetPrice"
                        android:textSize="@dimen/edt_txt_size"
                        android:textStyle="bold"/>

                <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="2,400,000 VND"
                        android:textSize="@dimen/edt_txt_size"
                        android:layout_weight="5.7"
                        android:id="@+id/txtMarketPrice"
                        android:layout_gravity="center"
                        />

            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="45dp"
            app:cardCornerRadius="0dp"
            app:cardElevation="2dp"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:id="@+id/cvMarketBuy">
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:weightSum="10">
            <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:id="@+id/llMarketBuy"
                    android:background="@drawable/bg_mix_color"
                    android:weightSum="10"
                    android:layout_weight="6"
                    android:clickable="true"
                    android:foreground="?android:attr/selectableItemBackground">

                <ImageView
                        android:layout_width="0dp"
                        android:layout_height="30dp"
                        android:src="@drawable/img_market"
                        android:layout_weight="3"
                        android:layout_gravity="center"/>
                <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="7"
                        android:gravity="center"
                        android:text="@string/txtMarketBuyNow"
                        android:textStyle="bold"
                        android:paddingRight="30dp"
                        android:textColor="@color/colorBackground"/>

            </LinearLayout>
            <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:background="@color/colorStartBtn"
                    android:weightSum="10"
                    android:layout_weight="4"
                    android:id="@+id/llMarketContact"
                    android:clickable="true"
                    android:foreground="?android:attr/selectableItemBackground">

                <ImageView
                        android:layout_width="0dp"
                        android:layout_height="25dp"
                        android:src="@drawable/img_cmt"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="2.5"
                        android:layout_gravity="center"/>
                <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="7.5"
                        android:gravity="center"
                        android:text="@string/txtMarketContact"
                        android:textStyle="bold"
                        android:paddingRight="30dp"
                        android:textColor="@color/colorBackground"/>

            </LinearLayout>
        </LinearLayout>


    </android.support.v7.widget.CardView>

    </RelativeLayout>

</LinearLayout>