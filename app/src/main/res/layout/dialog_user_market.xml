<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorBackground"
        android:padding="@dimen/layout_padding_size"
        android:orientation="vertical">

        <ImageView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:src="@drawable/img_camera"
                android:id="@+id/imgDialogUserMarketProfile"/>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/txtUserMarketPetName"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:padding="@dimen/layout_padding_size"
                        android:textStyle="bold"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="White pitbull"
                    android:gravity="left"
                    android:padding="@dimen/layout_padding_size"
                    android:layout_weight="1"
                    android:id="@+id/txtDialogUserMarketPetName"/>

        </LinearLayout>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/txtUserMarketPetGender"
                android:layout_weight="1"
                android:gravity="right"
                android:padding="@dimen/layout_padding_size"
                android:textStyle="bold"/>
        <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="White pitbull"
                android:gravity="left"
                android:padding="@dimen/layout_padding_size"
                android:layout_weight="1"
                android:id="@+id/txtDialogUserMarketPetGender"/>

    </LinearLayout>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/txtUserMarketPrice"
                android:layout_weight="1"
                android:gravity="right"
                android:padding="@dimen/layout_padding_size"
                android:textStyle="bold"/>
        <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="White pitbull"
                android:gravity="left"
                android:padding="@dimen/layout_padding_size"
                android:layout_weight="1"
                android:id="@+id/txtDialogUserMarketPetPrice"/>

    </LinearLayout>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/txtUserMarketPetAmount"
                android:layout_weight="1"
                android:gravity="right"
                android:padding="@dimen/layout_padding_size"
                android:textStyle="bold"/>
        <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="White pitbull"
                android:gravity="left"
                android:padding="@dimen/layout_padding_size"
                android:layout_weight="1"
                android:id="@+id/txtDialogUserMarketPetAmount"/>

    </LinearLayout>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="10">

        <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/txtUserMarketPetSeller"
                android:layout_weight="5"
                android:gravity="right"
                android:padding="@dimen/layout_padding_size"
                android:textStyle="bold"/>
        <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="White pitbull"
                android:gravity="left"
                android:padding="@dimen/layout_padding_size"
                android:layout_weight="5"
                android:id="@+id/txtDialogUserMarketPetSeller"/>

    </LinearLayout>

</LinearLayout>