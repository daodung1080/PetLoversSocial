<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="horizontal"
        android:background="@color/colorBackground">

        <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="3dp"
                app:cardCornerRadius="@dimen/margin_cv_size"
                android:layout_margin="@dimen/margin_cv_size">
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="10"
                    android:orientation="horizontal">
            <android.support.v7.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:elevation="2dp"
                    android:layout_weight="3.5"
                    app:cardCornerRadius="@dimen/margin_cv_size"
                    app:cardBackgroundColor="@color/colorCardView"
                    android:clickable="true"
                    android:id="@+id/cvUserPetListShow"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:layout_margin="@dimen/margin_layout_size"
                    android:layout_gravity="center">

                    <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="80dp"
                            android:layout_gravity="center"
                            android:layout_margin="@dimen/layout_padding_size"
                            android:id="@+id/imgUserPetListShow"
                            android:src="@drawable/img_animal"/>

            </android.support.v7.widget.CardView>

                <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="6"
                        android:layout_gravity="center"
                        android:layout_margin="@dimen/margin_cv_size">

                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                    <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_weight="1"
                            android:weightSum="10"
                            android:layout_margin="@dimen/margin_cv_size">

                        <ImageView
                                android:layout_width="0dp"
                                android:layout_height="25dp"
                                android:src="@drawable/img_category"
                                android:layout_weight="4"/>
                        <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="6"
                                android:text="Dog"
                                android:layout_marginLeft="@dimen/margin_cv_size"
                                android:id="@+id/txtUserPetListCategory"
                                android:layout_gravity="center"
                                android:textSize="@dimen/userorderbuy_txt_size"/>

                    </LinearLayout>
                        <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_weight="1"
                                android:weightSum="10"
                                android:layout_margin="@dimen/margin_cv_size">

                            <ImageView
                                    android:layout_width="0dp"
                                    android:layout_height="25dp"
                                    android:src="@drawable/img_pet_name"
                                    android:layout_weight="4"/>
                            <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="6"
                                    android:text="White dog"
                                    android:layout_marginLeft="@dimen/margin_cv_size"
                                    android:id="@+id/txtUserPetListName"
                                    android:layout_gravity="center"
                                    android:textSize="@dimen/userorderbuy_txt_size"/>

                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                        <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_weight="1"
                                android:weightSum="10"
                                android:layout_margin="@dimen/margin_cv_size">

                            <ImageView
                                    android:layout_width="0dp"
                                    android:layout_height="25dp"
                                    android:src="@drawable/img_gender"
                                    android:layout_weight="4"/>
                            <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="6"
                                    android:text="Dog"
                                    android:layout_marginLeft="@dimen/margin_cv_size"
                                    android:id="@+id/txtUserPetListGender"
                                    android:layout_gravity="center"
                                    android:textSize="@dimen/userorderbuy_txt_size"/>

                        </LinearLayout>
                        <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_weight="1"
                                android:weightSum="10"
                                android:layout_margin="@dimen/margin_cv_size">

                            <ImageView
                                    android:layout_width="0dp"
                                    android:layout_height="25dp"
                                    android:src="@drawable/img_weight"
                                    android:layout_weight="4"/>
                            <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="6"
                                    android:text="White dog"
                                    android:layout_marginLeft="@dimen/margin_cv_size"
                                    android:id="@+id/txtUserPetListWeight"
                                    android:layout_gravity="center"
                                    android:textSize="@dimen/userorderbuy_txt_size"/>

                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

                <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="9"
                        android:layout_gravity="right">

                    <android.support.v7.widget.CardView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="3"
                            app:cardElevation="2dp"
                            android:layout_margin="@dimen/margin_cv_size"
                            app:cardCornerRadius="@dimen/margin_cv_size"
                            android:clickable="true"
                            android:id="@+id/cvPetShare"
                            android:foreground="?android:attr/selectableItemBackground"
                            >

                            <ImageView
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:layout_gravity="center"
                                    android:src="@drawable/img_pet_share"
                                    android:layout_margin="@dimen/margin_cv_size"/>

                    </android.support.v7.widget.CardView>
                    <android.support.v7.widget.CardView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="3"
                            app:cardElevation="2dp"
                            android:layout_margin="@dimen/margin_cv_size"
                            app:cardCornerRadius="@dimen/margin_cv_size"
                            android:clickable="true"
                            android:id="@+id/cvPetConfig"
                            android:foreground="?android:attr/selectableItemBackground"
                            >

                        <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_gravity="center"
                                android:src="@drawable/img_config"
                                android:layout_margin="@dimen/margin_cv_size"/>

                    </android.support.v7.widget.CardView>
                    <android.support.v7.widget.CardView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="3"
                            app:cardElevation="2dp"
                            android:id="@+id/cvPetRemove"
                            android:layout_margin="@dimen/margin_cv_size"
                            app:cardCornerRadius="@dimen/margin_cv_size"
                            android:clickable="true"
                            android:foreground="?android:attr/selectableItemBackground"
                            >

                        <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_gravity="center"
                                android:src="@drawable/img_trash"
                                android:layout_margin="@dimen/margin_cv_size"/>

                    </android.support.v7.widget.CardView>

                </LinearLayout>

            </LinearLayout>

        </android.support.v7.widget.CardView>

</LinearLayout>