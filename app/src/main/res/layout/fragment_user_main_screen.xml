<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorBackground"
        android:padding="@dimen/layout_padding_size"
        >


    <LinearLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/layout_padding_size"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:id="@+id/llMainScreen"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toTopOf="parent"
            >

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            <android.support.v7.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:cardElevation="3dp"
                    app:cardCornerRadius="@dimen/margin_cv_size"
                    android:layout_weight="1"
                    android:layout_margin="@dimen/margin_cv_size"
                    android:clickable="true"
                    android:id="@+id/cvMCMarket"
                    android:foreground="?android:attr/selectableItemBackground">

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="@dimen/margin_layout_size">

                    <ImageView
                            android:layout_width="40dp"
                            android:layout_height="60dp"
                            android:src="@drawable/img_market"/>

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/txtUserPetMarket"
                            android:textStyle="bold"
                            android:textSize="@dimen/edt_txt_size"/>

                    <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_margin="@dimen/margin_layout_size"
                            android:background="@color/colorCardView"></View>

                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:padding="@dimen/margin_cv_size"
                            android:text="@string/titleMCMarket"
                            android:textSize="@dimen/userorderbuy_txt_size"
                            android:textColor="@color/colorCardView"/>

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:cardElevation="3dp"
                    app:cardCornerRadius="@dimen/margin_cv_size"
                    android:layout_weight="1"
                    android:layout_margin="@dimen/margin_cv_size"
                    android:clickable="true"
                    android:id="@+id/cvMCOrder"
                    android:foreground="?android:attr/selectableItemBackground">

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="@dimen/margin_layout_size">

                    <ImageView
                            android:layout_width="40dp"
                            android:layout_height="60dp"
                            android:src="@drawable/img_buyer_order"/>

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/txtUserPetOrder"
                            android:textStyle="bold"
                            android:textSize="@dimen/edt_txt_size"/>

                    <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_margin="@dimen/margin_layout_size"
                            android:background="@color/colorCardView"></View>

                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:padding="@dimen/margin_cv_size"
                            android:text="@string/titleMCOrder"
                            android:textSize="@dimen/userorderbuy_txt_size"
                            android:textColor="@color/colorCardView"/>

                </LinearLayout>

            </android.support.v7.widget.CardView>

        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            <android.support.v7.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:cardElevation="3dp"
                    app:cardCornerRadius="@dimen/margin_cv_size"
                    android:layout_weight="1"
                    android:layout_margin="@dimen/margin_cv_size"
                    android:clickable="true"
                    android:id="@+id/cvMCSell"
                    android:foreground="?android:attr/selectableItemBackground">

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="@dimen/margin_layout_size">

                    <ImageView
                            android:layout_width="40dp"
                            android:layout_height="60dp"
                            android:src="@drawable/img_sell"/>

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/txtUserPetTrade"
                            android:textStyle="bold"
                            android:textSize="@dimen/edt_txt_size"/>

                    <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_margin="@dimen/margin_layout_size"
                            android:background="@color/colorCardView"></View>

                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:padding="@dimen/margin_cv_size"
                            android:text="@string/titleMCSell"
                            android:textSize="@dimen/userorderbuy_txt_size"
                            android:textColor="@color/colorCardView"/>

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:cardElevation="3dp"
                    app:cardCornerRadius="@dimen/margin_cv_size"
                    android:layout_weight="1"
                    android:layout_margin="@dimen/margin_cv_size"
                    android:clickable="true"
                    android:id="@+id/cvMCLocation"
                    android:foreground="?android:attr/selectableItemBackground">

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="@dimen/margin_layout_size">

                    <ImageView
                            android:layout_width="40dp"
                            android:layout_height="60dp"
                            android:src="@drawable/img_location"/>

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/txtUserPetLocation"
                            android:textStyle="bold"
                            android:textSize="@dimen/edt_txt_size"
                            android:gravity="center"/>

                    <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_margin="@dimen/margin_layout_size"
                            android:background="@color/colorCardView"></View>

                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:padding="@dimen/margin_cv_size"
                            android:text="@string/titleMCLocation"
                            android:textSize="@dimen/userorderbuy_txt_size"
                            android:textColor="@color/colorCardView"/>

                </LinearLayout>

            </android.support.v7.widget.CardView>

        </LinearLayout>

        <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="3dp"
                app:cardCornerRadius="@dimen/margin_cv_size"
                android:layout_margin="@dimen/margin_cv_size"
                android:clickable="true"
                android:id="@+id/cvMCSocial"
                android:foreground="?android:attr/selectableItemBackground">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="@dimen/margin_layout_size">

                <ImageView
                        android:layout_width="40dp"
                        android:layout_height="60dp"
                        android:src="@drawable/img_social"/>

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/txtUserPetCommunity"
                        android:textStyle="bold"
                        android:textSize="@dimen/edt_txt_size"/>

                <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_margin="@dimen/margin_layout_size"
                        android:background="@color/colorCardView"></View>

                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:padding="@dimen/margin_cv_size"
                        android:text="@string/titleMCSocial"
                        android:textSize="@dimen/userorderbuy_txt_size"
                        android:textColor="@color/colorCardView"/>

            </LinearLayout>

        </android.support.v7.widget.CardView>

    </LinearLayout>


</android.support.constraint.ConstraintLayout>