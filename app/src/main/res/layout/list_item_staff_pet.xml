<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="horizontal"
        android:background="@color/colorBackground">

    <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="3dp"
            app:cardCornerRadius="@dimen/margin_cv_size"
            android:layout_margin="@dimen/margin_cv_size">
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="10"
                    android:orientation="horizontal">
                <android.support.v7.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:elevation="2dp"
                        android:layout_weight="3.5"
                        app:cardCornerRadius="@dimen/margin_cv_size"
                        app:cardBackgroundColor="@color/colorBackground"
                        android:id="@+id/cvUserPetListShow"
                        android:layout_margin="@dimen/margin_layout_size"
                        android:layout_gravity="center">

                    <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="80dp"
                            android:layout_gravity="center"
                            android:layout_margin="@dimen/layout_padding_size"
                            android:id="@+id/imgPet"
                            android:src="@drawable/img_animal"/>

                </android.support.v7.widget.CardView>

                <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="6"
                        android:layout_gravity="center"
                        android:layout_margin="@dimen/margin_cv_size">

                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:weightSum="10">
                        <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_weight="4"
                                android:weightSum="10"
                                android:layout_margin="@dimen/margin_cv_size">

                            <ImageView
                                    android:layout_width="0dp"
                                    android:layout_height="25dp"
                                    android:src="@drawable/img_category"
                                    android:layout_weight="4"/>
                            <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="6"
                                    android:text="Dog"
                                    android:layout_marginLeft="@dimen/margin_cv_size"
                                    android:id="@+id/txtCategory"
                                    android:layout_gravity="center"
                                    android:textSize="@dimen/userorderbuy_txt_size"/>

                        </LinearLayout>
                        <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_weight="6"
                                android:weightSum="10"
                                android:layout_margin="@dimen/margin_cv_size">

                            <ImageView
                                    android:layout_width="0dp"
                                    android:layout_height="25dp"
                                    android:src="@drawable/img_pet_name"
                                    android:layout_weight="4"/>
                            <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="6"
                                    android:text="White dog"
                                    android:layout_marginLeft="@dimen/margin_cv_size"
                                    android:id="@+id/txtName"
                                    android:layout_gravity="center"
                                    android:textSize="@dimen/userorderbuy_txt_size"/>

                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:weightSum="10">
                        <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_weight="4"
                                android:weightSum="10"
                                android:layout_margin="@dimen/margin_cv_size">

                            <ImageView
                                    android:layout_width="0dp"
                                    android:layout_height="25dp"
                                    android:src="@drawable/img_gender"
                                    android:layout_weight="4"/>
                            <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="6"
                                    android:text="Dog"
                                    android:layout_marginLeft="@dimen/margin_cv_size"
                                    android:id="@+id/txtGender"
                                    android:layout_gravity="center"
                                    android:textSize="@dimen/userorderbuy_txt_size"/>

                        </LinearLayout>
                        <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_weight="6"
                                android:weightSum="10"
                                android:layout_margin="@dimen/margin_cv_size">

                            <ImageView
                                    android:layout_width="0dp"
                                    android:layout_height="25dp"
                                    android:src="@drawable/img_weight"
                                    android:layout_weight="4"/>
                            <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="6"
                                    android:text="White dog"
                                    android:layout_marginLeft="@dimen/margin_cv_size"
                                    android:id="@+id/txtWeight"
                                    android:layout_gravity="center"
                                    android:textSize="@dimen/userorderbuy_txt_size"/>

                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:weightSum="10">
                        <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_weight="4"
                                android:weightSum="10"
                                android:layout_margin="@dimen/margin_cv_size">

                            <ImageView
                                    android:layout_width="0dp"
                                    android:layout_height="25dp"
                                    android:src="@drawable/img_amount"
                                    android:layout_weight="4"/>
                            <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="6"
                                    android:text="Dog"
                                    android:layout_marginLeft="@dimen/margin_cv_size"
                                    android:id="@+id/txtAmount"
                                    android:layout_gravity="center"
                                    android:textSize="@dimen/userorderbuy_txt_size"/>

                        </LinearLayout>
                        <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_weight="6"
                                android:weightSum="10"
                                android:layout_margin="@dimen/margin_cv_size">

                            <ImageView
                                    android:layout_width="0dp"
                                    android:layout_height="25dp"
                                    android:src="@drawable/img_price"
                                    android:layout_weight="4"/>
                            <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="6"
                                    android:text="White dog"
                                    android:layout_marginLeft="@dimen/margin_cv_size"
                                    android:id="@+id/txtPrice"
                                    android:layout_gravity="center"
                                    android:textSize="@dimen/userorderbuy_txt_size"/>

                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:padding="@dimen/margin_cv_size">
                        <android.support.v7.widget.CardView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                app:cardCornerRadius="@dimen/margin_cv_size"
                                app:cardElevation="2dp">
                            <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:weightSum="10">

                                <ImageView
                                        android:layout_width="0dp"
                                        android:layout_height="25dp"
                                        android:src="@drawable/img_seller"
                                        android:layout_weight="1.5"/>
                                <TextView
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="8.5"
                                        android:text="Dog"
                                        android:layout_marginLeft="@dimen/margin_cv_size"
                                        android:id="@+id/txtSeller"
                                        android:layout_gravity="center"
                                        android:textSize="@dimen/userorderbuy_txt_size"/>

                            </LinearLayout>
                        </android.support.v7.widget.CardView>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/margin_cv_size"
                    android:layout_gravity="right"
                    android:orientation="horizontal">
                <android.support.v7.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/margin_cv_size"
                        app:cardElevation="2dp"
                        android:layout_weight="1"
                        android:clickable="true"
                        android:id="@+id/cvCheck"
                        android:foreground="?android:attr/selectableItemBackground"
                        app:cardCornerRadius="@dimen/margin_cv_size">

                    <ImageView
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_margin="@dimen/margin_cv_size"
                            android:src="@drawable/img_done"
                            />

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/margin_cv_size"
                        app:cardElevation="2dp"
                        android:layout_weight="1"
                        android:clickable="true"
                        android:id="@+id/cvBin"
                        android:foreground="?android:attr/selectableItemBackground"
                        app:cardCornerRadius="@dimen/margin_cv_size">

                    <ImageView
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_margin="@dimen/margin_cv_size"
                            android:src="@drawable/img_bin"
                            />

                </android.support.v7.widget.CardView>
            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>