<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:background="@color/colorBackground"
        android:orientation="vertical">


        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="330dp">

            <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="220dp"
                    app:cardCornerRadius="0dp"
                    app:cardElevation="0dp">
                <android.support.constraint.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/bg_mix_color">

                    <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:id="@+id/linearLayout2"
                            app:layout_constraintEnd_toEndOf="parent"
                            android:layout_marginEnd="24dp"
                            android:layout_marginRight="24dp"
                            app:layout_constraintStart_toStartOf="parent"
                            android:layout_marginLeft="8dp"
                            android:layout_marginStart="8dp"
                            android:layout_marginTop="24dp"
                            app:layout_constraintTop_toTopOf="parent">

                        <de.hdodenhof.circleimageview.CircleImageView
                                android:layout_width="80dp"
                                android:layout_height="80dp"
                                android:src="@drawable/img_user"
                                app:civ_border_color="@color/colorCardView"
                                app:civ_border_width="2dp"
                                android:id="@+id/imgProfleUser"
                                app:civ_circle_background_color="@color/colorBackground"/>

                        <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Dao Dung"
                                android:id="@+id/txtProfileUsername"
                                android:textSize="@dimen/edt_txt_size"
                                android:textColor="@color/colorBackground"
                                android:textStyle="bold"
                                android:gravity="center"/>

                    </LinearLayout>

                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:weightSum="10"
                            app:layout_constraintEnd_toEndOf="parent"
                            android:layout_marginEnd="8dp"
                            android:layout_marginRight="8dp"
                            app:layout_constraintStart_toStartOf="parent"
                            android:layout_marginLeft="8dp"
                            android:layout_marginStart="8dp"
                            app:layout_constraintTop_toBottomOf="@+id/linearLayout2"
                            android:layout_marginTop="8dp">

                        <TextView
                                android:text="@string/txtProfileSurplus"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:textStyle="bold"
                                android:layout_weight="4.7"
                                android:gravity="right"
                                android:layout_gravity="center"
                                android:textColor="@color/colorBackground"
                                android:id="@+id/textView4"/>

                        <TextView
                                android:text="10.000 VND"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:id="@+id/txtProfileMoney"
                                android:layout_weight="3"
                                android:paddingLeft="10dp"
                                android:layout_gravity="center"
                                android:textColor="@color/colorBackground"/>

                        <ImageView
                                android:layout_width="0dp"
                                android:layout_height="20dp"
                                android:layout_weight="1"
                                android:id="@+id/imgProfileHide"
                                android:src="@drawable/img_hide"/>

                    </LinearLayout>
                </android.support.constraint.ConstraintLayout>
            </android.support.v7.widget.CardView>


            <android.support.v7.widget.CardView
                    android:layout_width="320dp"
                    android:layout_height="wrap_content"
                    app:cardElevation="2dp"
                    app:cardCornerRadius="@dimen/margin_layout_size"
                    android:layout_centerHorizontal="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="10dp">

                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/margin_layout_size"
                            android:orientation="vertical">

                        <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:weightSum="10"
                                android:layout_margin="@dimen/margin_cv_size">

                            <ImageView
                                    android:layout_width="0dp"
                                    android:layout_height="25dp"
                                    android:src="@drawable/img_full_name"
                                    android:layout_weight="3"/>
                            <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:text="Dao Viet Dung"
                                    android:textSize="@dimen/edt_txt_size"
                                    android:layout_weight="7"
                                    android:id="@+id/txtProfileFullname"
                                    android:layout_gravity="center"/>

                        </LinearLayout>
                        <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:weightSum="10"
                                android:layout_margin="@dimen/margin_cv_size">

                            <ImageView
                                    android:layout_width="0dp"
                                    android:layout_height="25dp"
                                    android:src="@drawable/img_phone"
                                    android:layout_weight="3"/>
                            <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:text="0971536698"
                                    android:textSize="@dimen/edt_txt_size"
                                    android:layout_weight="7"
                                    android:id="@+id/txtProfilePhone"
                                    android:layout_gravity="center"/>

                        </LinearLayout>
                        <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:weightSum="10"
                                android:layout_margin="@dimen/margin_cv_size">

                            <ImageView
                                    android:layout_width="0dp"
                                    android:layout_height="25dp"
                                    android:src="@drawable/img_trade_time"
                                    android:layout_weight="3"/>
                            <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:text="3 times"
                                    android:textSize="@dimen/edt_txt_size"
                                    android:layout_weight="7"
                                    android:id="@+id/txtProfileTradeTime"
                                    android:layout_gravity="center"/>

                        </LinearLayout>
                        <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:weightSum="10"
                                android:layout_margin="@dimen/margin_cv_size">

                            <ImageView
                                    android:layout_width="0dp"
                                    android:layout_height="25dp"
                                    android:src="@drawable/img_user_location"
                                    android:layout_weight="3"/>
                            <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:text="Yen Hoa Street - Ha Noi"
                                    android:textSize="@dimen/edt_txt_size"
                                    android:layout_weight="7"
                                    android:id="@+id/txtProfileLocation"
                                    android:layout_gravity="center"/>

                        </LinearLayout>

                    </LinearLayout>

            </android.support.v7.widget.CardView>

        </RelativeLayout>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

        <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="2dp"
                app:cardCornerRadius="5dp"
                android:layout_margin="@dimen/margin_layout_size">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="10"
                    android:layout_margin="@dimen/margin_layout_size">

                <ImageView
                        android:layout_width="0dp"
                        android:layout_height="25dp"
                        android:layout_weight="2"
                        android:src="@drawable/img_update"
                        android:layout_gravity="center"/>
                <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="@string/txtUserUpdateInformation"
                        android:layout_weight="7"
                        android:textSize="@dimen/edt_txt_size"/>

                <android.support.v7.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        app:cardElevation="3dp"
                        android:clickable="true"
                        android:id="@+id/cvProfileUpdate"
                        android:foreground="?android:attr/selectableItemBackground"
                        app:cardCornerRadius="@dimen/margin_cv_size">

                    <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="20dp"
                            android:layout_margin="@dimen/margin_cv_size"
                            android:src="@drawable/img_next"/>

                </android.support.v7.widget.CardView>

            </LinearLayout>

        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="2dp"
                app:cardCornerRadius="5dp"
                android:layout_margin="@dimen/margin_layout_size">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="10"
                    android:layout_margin="@dimen/margin_layout_size">

                <ImageView
                        android:layout_width="0dp"
                        android:layout_height="25dp"
                        android:layout_weight="2"
                        android:src="@drawable/img_purchase"
                        android:layout_gravity="center"/>
                <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="@string/txtUserPurchaseMoney"
                        android:layout_weight="7"
                        android:textSize="@dimen/edt_txt_size"/>

                <android.support.v7.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        app:cardElevation="3dp"
                        android:id="@+id/cvProfilePurchase"
                        android:clickable="true"
                        android:foreground="?android:attr/selectableItemBackground"
                        app:cardCornerRadius="@dimen/margin_cv_size">

                    <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="20dp"
                            android:layout_margin="@dimen/margin_cv_size"
                            android:src="@drawable/img_next"/>

                </android.support.v7.widget.CardView>

            </LinearLayout>

        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="2dp"
                app:cardCornerRadius="5dp"
                android:layout_margin="@dimen/margin_layout_size">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="10"
                android:layout_margin="@dimen/margin_layout_size">

            <ImageView
                    android:layout_width="0dp"
                    android:layout_height="25dp"
                    android:layout_weight="2"
                    android:src="@drawable/img_insert"
                    android:layout_gravity="center"/>
            <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/txtUserAddPet"
                    android:layout_weight="7"
                    android:textSize="@dimen/edt_txt_size"/>

            <android.support.v7.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:cardElevation="3dp"
                    android:clickable="true"
                    android:id="@+id/cvProfleAddPet"
                    android:foreground="?android:attr/selectableItemBackground"
                    app:cardCornerRadius="@dimen/margin_cv_size">

                <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:layout_margin="@dimen/margin_cv_size"
                        android:src="@drawable/img_next"/>

            </android.support.v7.widget.CardView>

        </LinearLayout>

            </android.support.v7.widget.CardView>

            </LinearLayout>

</LinearLayout>