<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".user.userpurchase.UserPurchaseActivity"
        android:padding="@dimen/layout_padding_size"
        android:background="@color/colorBackground">

    <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            app:srcCompat="@drawable/img_purchase"
            android:id="@+id/imageView6"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"/>

    <TextView
            android:text="@string/valuePurchase"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView5"
            android:layout_marginTop="8dp"
            android:textStyle="bold"
            android:textSize="17dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView6"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"/>

    <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorCardView"
            app:layout_constraintTop_toBottomOf="@+id/textView5"
            android:layout_marginTop="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:id="@+id/view">
    </View>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@+id/view"
            android:layout_marginTop="8dp">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="9"
                android:layout_margin="@dimen/margin_cv_size">

            <android.support.v7.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    app:cardElevation="2dp"
                    app:cardCornerRadius="@dimen/margin_cv_size"
                    android:layout_weight="3"
                    android:id="@+id/cv10"
                    android:clickable="true"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:layout_margin="@dimen/margin_cv_size">

                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="10.000 VND"
                        android:textSize="@dimen/edt_txt_size"
                        android:gravity="center"/>

            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    app:cardElevation="2dp"
                    android:id="@+id/cv50"
                    app:cardCornerRadius="@dimen/margin_cv_size"
                    android:layout_weight="3"
                    android:clickable="true"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:layout_margin="@dimen/margin_cv_size">

                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="50.000 VND"
                        android:textSize="@dimen/edt_txt_size"
                        android:gravity="center"/>

            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    app:cardElevation="2dp"
                    android:id="@+id/cv100"
                    app:cardCornerRadius="@dimen/margin_cv_size"
                    android:layout_weight="3"
                    android:clickable="true"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:layout_margin="@dimen/margin_cv_size">

                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="100.000 VND"
                        android:textSize="@dimen/edt_txt_size"
                        android:gravity="center"/>

            </android.support.v7.widget.CardView>

        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="9"
                android:layout_margin="@dimen/margin_cv_size">

            <android.support.v7.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    app:cardElevation="2dp"
                    app:cardCornerRadius="@dimen/margin_cv_size"
                    android:layout_weight="3"
                    android:id="@+id/cv200"
                    android:clickable="true"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:layout_margin="@dimen/margin_cv_size">

                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="200.000 VND"
                        android:textSize="@dimen/edt_txt_size"
                        android:gravity="center"/>

            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    app:cardElevation="2dp"
                    android:id="@+id/cv500"
                    app:cardCornerRadius="@dimen/margin_cv_size"
                    android:layout_weight="3"
                    android:clickable="true"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:layout_margin="@dimen/margin_cv_size">

                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="500.000 VND"
                        android:textSize="@dimen/edt_txt_size"
                        android:gravity="center"/>

            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    app:cardElevation="2dp"
                    android:id="@+id/cv1000"
                    app:cardCornerRadius="@dimen/margin_cv_size"
                    android:layout_weight="3"
                    android:clickable="true"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:layout_margin="@dimen/margin_cv_size">

                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="1.000.000 VND"
                        android:textSize="@dimen/edt_txt_size"
                        android:gravity="center"/>

            </android.support.v7.widget.CardView>

        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="9"
                android:layout_margin="@dimen/margin_cv_size">

            <android.support.v7.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    app:cardElevation="2dp"
                    app:cardCornerRadius="@dimen/margin_cv_size"
                    android:layout_weight="3"
                    android:id="@+id/cv1500"
                    android:clickable="true"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:layout_margin="@dimen/margin_cv_size">

                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="1.500.000 VND"
                        android:textSize="@dimen/edt_txt_size"
                        android:gravity="center"/>

            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    app:cardElevation="2dp"
                    android:id="@+id/cv2000"
                    app:cardCornerRadius="@dimen/margin_cv_size"
                    android:layout_weight="3"
                    android:clickable="true"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:layout_margin="@dimen/margin_cv_size">

                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="2.000.000 VND"
                        android:textSize="@dimen/edt_txt_size"
                        android:gravity="center"/>

            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    app:cardElevation="2dp"
                    android:id="@+id/cv3000"
                    app:cardCornerRadius="@dimen/margin_cv_size"
                    android:layout_weight="3"
                    android:clickable="true"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:layout_margin="@dimen/margin_cv_size">

                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="3.000.000 VND"
                        android:textSize="@dimen/edt_txt_size"
                        android:gravity="center"/>

            </android.support.v7.widget.CardView>

        </LinearLayout>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>